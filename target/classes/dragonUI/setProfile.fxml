<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" 
minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" 
xmlns="http://javafx.com/javafx/17.0.12" 
xmlns:fx="http://javafx.com/fxml/1" fx:controller="dragonUI.SetProfile"
styleClass="root" alignment="CENTER">
   <children >
   
      <!-- <HBox prefHeight="100.0" prefWidth="200.0">
         <children> <Label text="Enter Your Name: " />
            <TextField fx:id="playerName" />
         </children>
      </HBox> -->
      <HBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER">
         <children>
            <Label text="Name Your Pet: " />
            <TextField fx:id="petName" />
         </children>
      </HBox>
      <Label fx:id="errorLabel" style="-fx-text-fill: red"/>
      <HBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER">
         <children>
            <Button fx:id="backButton" onAction="#goBack" text="_Back">
               <graphic>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../Back.png" />
                        </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="confirmButton" onAction="#handleProfile" text="_Confirm">
               <graphic>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../Forward.png" />
                        </image>
                  </ImageView>
               </graphic>
               </Button>
         </children></HBox>
   </children>
</VBox>
