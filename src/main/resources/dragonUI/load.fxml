<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox fx:id="loadVBox"
      alignment="CENTER" spacing="15"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dragonUI.LoadMenu"
      style="-fx-background-image: url('bg_load.jpg');
      -fx-background-size: cover;
      -fx-background-repeat: no-repeat;
      -fx-background-color: white;
      -fx-opacity: 0.8;
      -fx-padding: 30;">
  
  <!-- Load Button -->
  <Button fx:id="loadButton" text="_Load" onAction="#openLoadDialog" />

  <!-- Back Button -->
  <Button fx:id="switchToMainButton" text="_Switch to Main View" onAction="#switchToMain"/>
</VBox>
